
    // Função para exibir o submenu correspondente ao tipo de aula selecionado
    function exibirSubmenu(tipoAula) {
        // Ocultar todos os submenus
        var submenus = document.querySelectorAll('.submenu');
        submenus.forEach(function (submenu) {
            submenu.style.display = 'none';
        });

        // Exibir apenas o submenu correspondente ao tipo de aula selecionado
        var submenu = document.getElementById('submenu-' + tipoAula);
        if (submenu) {
            submenu.style.display = 'block';
        }
    }

    // Função para preencher a lista suspensa de temas com base no tipo de aula selecionado
    function preencherTemas(tipoAula) {
        var opcoesTema = document.getElementById("opcoesTema");
        var temas = [];

        // Limpar opções existentes
        opcoesTema.innerHTML = "";

        // Definir os temas com base no tipo de aula selecionado
        switch (tipoAula) {
            case "hibrida":
                // Definir os temas para aula híbrida
                temas = ["Tema 1", "Tema 2", "Tema 3"];
                break;
            case "rotacao":
                // Definir os temas para aula com rotação
                temas = ["Tema A", "Tema B", "Tema C"];
                break;
            case "invertida":
                // Definir os temas para aula com sala invertida
                temas = ["Tema X", "Tema Y", "Tema Z"];
                break;
        }

        // Adicionar opções de tema ao elemento select
        temas.forEach(function(tema) {
            var option = document.createElement("option");
            option.text = tema;
            opcoesTema.add(option);
        });

        // Exibir o elemento select de temas
        opcoesTema.style.display = "block";

        // Exibir o div de tópicos de aula
        var divTopicosAula = document.getElementById("topicosAula");
        divTopicosAula.style.display = "block";
    }

    // Adicionar evento de mudança à lista suspensa de tipos de aula
    document.getElementById("opcoesAula").addEventListener("change", function() {
        var tipoAulaSelecionado = this.value;
        preencherTemas(tipoAulaSelecionado);
    });

    // Adicionar evento de mudança à lista suspensa de temas
    document.getElementById("opcoesTema").addEventListener("change", function() {
        mostrarAula();
    });

    // Adicionando evento de mouseover aos botões de tipo de aula
    document.querySelectorAll('.tipo-aula').forEach(function(botao) {
        botao.addEventListener('mouseover', function() {
            var tipoAula = this.getAttribute('data-tipo');
            preencherTemas(tipoAula); // Chama a função preencherTemas() com o tipo de aula correspondente
        });
    });

    // Função para mostrar a aula correspondente ao tema selecionado
    function mostrarAula() {
        var temaSelecionado = document.getElementById("opcoesTema").value; // Obtém o valor do tema selecionado
        
        // Ocultar todas as aulas
        var aulas = document.querySelectorAll('.aula');
        aulas.forEach(function(aula) {
            aula.style.display = 'none';
        });
        
        // Exibir apenas a aula correspondente ao tema selecionado
        var aula = document.getElementById(temaSelecionado); // Suponha que o ID da aula seja o mesmo que o tema
        if (aula) {
            aula.style.display = 'block';
        }
    }
